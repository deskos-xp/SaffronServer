<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ResultView"
    tools:showIn="@layout/activity_result_view">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerPadding="25dp"
        android:gravity="center|end"
        android:padding="25dp">

        <TableRow
            android:id="@+id/name_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="product name" />
        </TableRow>

        <TableRow
            android:id="@+id/id_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID" />

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="product id" />
        </TableRow>

        <TableRow
            android:id="@+id/price_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Product Price" />
        </TableRow>

        <TableRow
            android:id="@+id/weight_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/weight_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Product Weight" />
        </TableRow>

        <TableRow
            android:id="@+id/case_count_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/case_count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case Count" />

            <TextView
                android:id="@+id/case_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Product Case Count" />
        </TableRow>

        <TableRow
            android:id="@+id/upc_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/upc_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPC" />

            <Button
                android:id="@+id/upc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPC" />
        </TableRow>

        <TableRow
            android:id="@+id/homecode_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/homecode_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Code" />

            <TextView
                android:id="@+id/homecode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Product Home Code" />

        </TableRow>

        <TableRow
            android:id="@+id/images_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/upc_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_launcher_background" />
        </TableRow>

        <TableRow
            android:id="@+id/vendors_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/vendors_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendor" />

            <Button
                android:id="@+id/vendors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendor" />
        </TableRow>

        <TableRow
            android:id="@+id/departments_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/departments_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department" />

            <Button
                android:id="@+id/departments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department" />
        </TableRow>

        <TableRow
            android:id="@+id/brands_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/brands_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand" />

            <Button
                android:id="@+id/brands"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand" />
        </TableRow>

        <TableRow
            android:id="@+id/manufacturers_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/manufacturers_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufacturer" />

            <Button
                android:id="@+id/manufacturers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufacturer" />
        </TableRow>
    </TableLayout>
</androidx.core.widget.NestedScrollView>